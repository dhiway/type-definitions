{
  "compilerOptions": {
    "allowJs": true,
    "module": "CommonJS",
    "target": "ES2015",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "declaration": true,
    "outDir": "lib/"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
